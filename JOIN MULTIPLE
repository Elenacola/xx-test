--selezionare quali articoli di PASTA VINO E ACQUA sono stati aquistati da clienti residenti nella provinvia di SASSARI --

SELECT DISTINCT 
B.CODART AS CODICE,
C.DESCRIZIONE AS "DESCRIZIONE ARTICOLO",
RTRIM(E.DESCRIZIONE) AS "DESCRIZONE ECR",
F.PROV AS PROVINCIA
FROM SCONTRINI A 
JOIN DETTSCONTRINI B ON A.Id = B.IDSCONTRINO
JOIN ARTICOLI C ON B.CODART = C.CODART
JOIN CLASSECR D ON B.CODART = D.CODART  
JOIN ECRLIV2 E ON D.LIV1 = E.IDLIV1 AND D.LIV2 = E.ID
JOIN CLIENTI F ON A.CODFID = F.CODFIDELITY
WHERE 
RTRIM(F.PROV) = 'SS' 
AND 
RTRIM(E.DESCRIZIONE) IN ('PASTA','VINO','ACQUA')
ORDER BY RTRIM(E.DESCRIZIONE), B.CODART;

